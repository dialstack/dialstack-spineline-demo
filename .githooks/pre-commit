#!/bin/bash

# Pre-commit hook to run linting, type checking, and formatting
# This ensures code quality before committing

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript type checking
echo "ğŸ”§ Running TypeScript type check..."
npm run typecheck
if [ $? -ne 0 ]; then
    echo "âŒ TypeScript type check failed. Commit aborted."
    exit 1
fi

# Run ESLint
echo "ğŸ§¹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
    echo "âŒ ESLint failed. Commit aborted."
    echo "ğŸ’¡ Try running 'npm run lint:fix' to auto-fix issues."
    exit 1
fi

# Check formatting
echo "ğŸ’… Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting check failed. Commit aborted."
    echo "ğŸ’¡ Run 'npm run format' to fix formatting issues."
    exit 1
fi

# Check OpenTofu formatting if tofu files are being committed
if git diff --cached --name-only | grep -q "\.tf$"; then
    echo "ğŸ—ï¸  Checking OpenTofu formatting..."

    # Check if tofu is installed
    if ! command -v tofu &> /dev/null; then
        echo "âš ï¸  OpenTofu not found. Skipping infrastructure formatting check."
        echo "ğŸ’¡ Install OpenTofu to enable infrastructure formatting validation."
    else
        # Only check formatting - no validation or initialization required
        if ! tofu fmt -check -recursive tofu/; then
            echo "âŒ OpenTofu formatting check failed. Commit aborted."
            echo "ğŸ’¡ Run 'tofu fmt -recursive tofu/' to fix formatting."
            exit 1
        fi
        echo "âœ… OpenTofu formatting check passed!"
    fi
fi

echo "âœ… All pre-commit checks passed!"
exit 0